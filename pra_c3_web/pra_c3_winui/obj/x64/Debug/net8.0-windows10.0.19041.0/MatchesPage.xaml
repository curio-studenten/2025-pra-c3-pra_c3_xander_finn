<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="pra_c3_winui.MatchesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="20" Margin="0,0,0,20">
            <TextBlock Text="⚽ Wedstrijden" FontSize="28" FontWeight="Bold"/>
            <Button x:ConnectionId='7'
                x:Name="RefreshButton"
                Content="🔄 Vernieuwen"
                                           />
            <ProgressRing x:ConnectionId='8'
                x:Name="LoadingRing"
                IsActive="False"
                Width="24"
                Height="24"/>
        </StackPanel>

        <!-- Matches List -->
        <ListView x:ConnectionId='2'
            Grid.Row="1"
            x:Name="MatchesListView"
            SelectionMode="None"
                                                 
            IsItemClickEnabled="True">
            <ListView.HeaderTemplate>
                <DataTemplate>
                    <Grid Padding="12" Background="{ThemeResource AccentFillColorDefaultBrush}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Tijd" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Grid.Column="1" Text="Veld" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Grid.Column="2" Text="Wedstrijd" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Grid.Column="3" Text="Score" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                        <TextBlock Grid.Column="4" Text="Status" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                    </Grid>
                </DataTemplate>
            </ListView.HeaderTemplate>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{Binding StartTime}" FontSize="14" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" Text="{Binding Field}" FontSize="14" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="2" Text="{Binding DisplayMatch}" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="3" Text="{Binding DisplayScore}" FontSize="14" FontWeight="Bold"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <Border Grid.Column="4" CornerRadius="4" Padding="8,4" HorizontalAlignment="Center" VerticalAlignment="Center"
                                Background="{ThemeResource AccentFillColorDefaultBrush}">
                            <TextBlock Text="{Binding DisplayStatus}" FontSize="12" Foreground="White"/>
                        </Border>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Empty State -->
        <StackPanel x:ConnectionId='3'
            x:Name="EmptyState"
            Grid.Row="1"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Visibility="Collapsed">
            <TextBlock Text="⚽" FontSize="64" HorizontalAlignment="Center"/>
            <TextBlock Text="Nog geen wedstrijden gepland" FontSize="18" HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Admin Info -->
        <InfoBar x:ConnectionId='4'
            x:Name="AdminInfoBar"
            Grid.Row="1"
            IsOpen="False"
            Severity="Informational"
            Title="Admin"
            Message="Klik op een wedstrijd om de score in te voeren."
            VerticalAlignment="Bottom"
            Margin="0,0,0,20"/>
    </Grid>
</Page>

