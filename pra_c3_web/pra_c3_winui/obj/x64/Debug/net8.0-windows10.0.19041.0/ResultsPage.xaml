<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="pra_c3_winui.ResultsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="📊 Wedstrijd Resultaten" FontSize="28" FontWeight="Bold"/>
                <TextBlock Text="Bekijk de uitslagen van gespeelde wedstrijden"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            </StackPanel>
            <Button x:ConnectionId='11' Content="🔄 Vernieuwen" Margin="30,0,0,0" VerticalAlignment="Center"
                                               />
            <Button x:ConnectionId='12' x:Name="ProcessBetsButton" Content="💰 Verwerk Weddenschappen"
                    Margin="10,0,0,0" VerticalAlignment="Center"
                    Style="{StaticResource AccentButtonStyle}"
                                                   />
        </StackPanel>

        <!-- Results List -->
        <Border Grid.Row="1" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                CornerRadius="8" Padding="16">
            <Grid>
                <ListView x:ConnectionId='6' x:Name="ResultsListView"                                                    >
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="12" Margin="0,4"
                                  Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                                  CornerRadius="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Match -->
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="{Binding DisplayMatch}"
                                               FontSize="16" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding DisplayResult}"
                                               FontSize="13" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                </StackPanel>

                                <!-- Score -->
                                <Border Grid.Column="1"
                                        Background="{ThemeResource AccentFillColorDefaultBrush}"
                                        CornerRadius="8" Padding="16,8" Margin="20,0">
                                    <TextBlock Text="{Binding DisplayScore}"
                                               FontSize="20" FontWeight="Bold" Foreground="White"/>
                                </Border>

                                <!-- View Goals -->
                                <Button x:ConnectionId='10' Grid.Column="2" Content="⚽ Goals" Tag="{Binding Id}"
                                                                     />
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <TextBlock x:ConnectionId='7' x:Name="NoResultsText"
                           Text="Nog geen wedstrijd resultaten beschikbaar."
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           Visibility="Collapsed"/>

                <ProgressRing x:ConnectionId='8' x:Name="LoadingRing" IsActive="False"
                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Goals Dialog -->
        <ContentDialog x:ConnectionId='2' x:Name="GoalsDialog" Title="⚽ Doelpunten" CloseButtonText="Sluiten">
            <StackPanel MinWidth="300" Spacing="8">
                <ListView x:ConnectionId='3' x:Name="GoalsListView">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" FontWeight="Bold">
                                    <Run Text="{Binding Minute}"/>
                                    <Run Text="'"/>
                                </TextBlock>
                                <TextBlock Grid.Column="1" Text="{Binding PlayerName}"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <TextBlock x:ConnectionId='4' x:Name="NoGoalsText" Text="Geen doelpunten in deze wedstrijd."
                           Visibility="Collapsed" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            </StackPanel>
        </ContentDialog>
    </Grid>
</Page>

