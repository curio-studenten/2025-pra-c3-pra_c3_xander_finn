<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="pra_c3_winui.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="40">
        <StackPanel
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Width="400"
            Spacing="16">

            <!-- Logo / Titel -->
            <TextBlock
                Text="âš½ Schoolvoetbal Gokken"
                FontSize="32"
                FontWeight="Bold"
                HorizontalAlignment="Center"
                Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>

            <TextBlock
                Text="Inloggen"
                FontSize="24"
                HorizontalAlignment="Center"/>

            <TextBlock
                Text="Log in als gokker om te wedden op wedstrijden, of als admin om resultaten te bekijken."
                TextWrapping="Wrap"
                HorizontalAlignment="Center"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                FontSize="12"
                Margin="0,0,0,10"/>

            <!-- Error Message -->
            <InfoBar
                x:Name="ErrorInfoBar"
                IsOpen="False"
                Severity="Error"
                Title="Fout"/>

            <!-- Success Message -->
            <InfoBar
                x:Name="SuccessInfoBar"
                IsOpen="False"
                Severity="Success"
                Title="Succes"/>

            <!-- Username -->
            <TextBox
                x:Name="UsernameTextBox"
                Header="Gebruikersnaam"
                PlaceholderText="Gebruikersnaam"/>

            <!-- Password -->
            <PasswordBox
                x:Name="PasswordBox"
                Header="Wachtwoord"
                PlaceholderText="Wachtwoord"/>

            <!-- Login Button -->
            <Button
                x:Name="LoginButton"
                Content="Inloggen"
                HorizontalAlignment="Stretch"
                Style="{StaticResource AccentButtonStyle}"
                Click="LoginButton_Click"/>

            <!-- Loading -->
            <ProgressRing
                x:Name="LoadingRing"
                IsActive="False"
                HorizontalAlignment="Center"/>

            <!-- Register Link -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <TextBlock Text="Nog geen account? " VerticalAlignment="Center"/>
                <HyperlinkButton
                    Content="Registreer hier"
                    Click="RegisterLink_Click"/>
            </StackPanel>

            <!-- Test accounts info -->
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8" Padding="16" Margin="0,20,0,0">
                <StackPanel Spacing="4">
                    <TextBlock Text="Test Accounts:" FontWeight="SemiBold"/>
                    <TextBlock Text="Admin: admin / admin123" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <TextBlock Text="Gokker: gokker1 / wachtwoord" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <TextBlock Text="Gokker: gokker2 / wachtwoord" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                </StackPanel>
            </Border>

        </StackPanel>
    </Grid>
</Page>
