<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="pra_c3_winui.BettingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Wedden op Wedstrijden" FontSize="28" FontWeight="Bold"/>
            <TextBlock Text="Selecteer een wedstrijd en plaats je weddenschap!"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
        </StackPanel>

        <!-- Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>

            <!-- Matches List -->
            <Border Grid.Column="0" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8" Padding="16" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Beschikbare Wedstrijden" FontSize="18" FontWeight="SemiBold"/>
                        <Button Content="Vernieuwen" Margin="20,0,0,0" Click="RefreshButton_Click"/>
                    </StackPanel>

                    <ListView Grid.Row="1" x:Name="MatchesListView"
                              SelectionMode="Single"
                              SelectionChanged="MatchesListView_SelectionChanged">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="10" Margin="0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{Binding DisplayMatch}"
                                               FontSize="16" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="" FontSize="20"
                                               VerticalAlignment="Center" Opacity="0.5"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <TextBlock x:Name="NoMatchesText" Grid.Row="1"
                               Text="Geen wedstrijden beschikbaar om op te wedden."
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               Visibility="Collapsed"/>

                    <ProgressRing x:Name="LoadingRing" Grid.Row="1"
                                  IsActive="False" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- Betting Panel -->
            <Border Grid.Column="1" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8" Padding="20" Margin="10,0,0,0">
                <StackPanel x:Name="BettingPanel" Spacing="16">
                    <TextBlock Text="Plaats Weddenschap" FontSize="18" FontWeight="SemiBold"/>

                    <!-- Selected Match -->
                    <StackPanel>
                        <TextBlock Text="Geselecteerde wedstrijd:" FontSize="12"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <TextBlock x:Name="SelectedMatchText" Text="Selecteer een wedstrijd..."
                                   FontSize="16" FontWeight="SemiBold"/>
                    </StackPanel>

                    <!-- Bet Type Selection -->
                    <StackPanel x:Name="BetOptionsPanel" Visibility="Collapsed" Spacing="12">
                        <TextBlock Text="Kies je voorspelling:" FontWeight="SemiBold"/>

                        <RadioButton x:Name="Team1WinRadio" GroupName="BetType">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="Team1WinText" Text="Team 1 wint"/>
                                <TextBlock Text=" (2.0x)" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                            </StackPanel>
                        </RadioButton>

                        <RadioButton x:Name="DrawRadio" GroupName="BetType">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Gelijkspel"/>
                                <TextBlock Text=" (3.5x)" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                            </StackPanel>
                        </RadioButton>

                        <RadioButton x:Name="Team2WinRadio" GroupName="BetType">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="Team2WinText" Text="Team 2 wint"/>
                                <TextBlock Text=" (2.0x)" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                            </StackPanel>
                        </RadioButton>

                        <!-- Amount -->
                        <StackPanel Margin="0,10,0,0">
                            <TextBlock Text="Inzet (€):" FontWeight="SemiBold"/>
                            <NumberBox x:Name="AmountBox" Minimum="1" Maximum="100" Value="10"
                                       SpinButtonPlacementMode="Inline"/>
                        </StackPanel>

                        <!-- Potential Win -->
                        <Border Background="{ThemeResource AccentFillColorDefaultBrush}"
                                CornerRadius="8" Padding="12">
                            <StackPanel>
                                <TextBlock Text="Mogelijke winst:" Foreground="White" FontSize="12"/>
                                <TextBlock x:Name="PotentialWinText" Text="€20.00"
                                           Foreground="White" FontSize="24" FontWeight="Bold"/>
                            </StackPanel>
                        </Border>

                        <!-- Place Bet Button -->
                        <Button x:Name="PlaceBetButton" Content="Plaats Weddenschap"
                                HorizontalAlignment="Stretch"
                                Style="{StaticResource AccentButtonStyle}"
                                Click="PlaceBetButton_Click"/>

                        <!-- Info Bar -->
                        <InfoBar x:Name="BetInfoBar" IsOpen="False" Severity="Success"/>
                    </StackPanel>

                    <!-- Already Bet Message -->
                    <TextBlock x:Name="AlreadyBetText"
                               Text="Je hebt al op deze wedstrijd gewed!"
                               Foreground="{ThemeResource SystemFillColorCautionBrush}"
                               Visibility="Collapsed"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
