<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="pra_c3_winui.RegisterPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="40">
        <StackPanel
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Width="400"
            Spacing="16">

            <!-- Logo / Titel -->
            <TextBlock
                Text="âš½ Schoolvoetbal"
                FontSize="36"
                FontWeight="Bold"
                HorizontalAlignment="Center"
                Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>

            <TextBlock
                Text="Account Aanmaken"
                FontSize="24"
                HorizontalAlignment="Center"
                Margin="0,0,0,20"/>

            <!-- Error Message -->
            <InfoBar
                x:Name="ErrorInfoBar"
                IsOpen="False"
                Severity="Error"
                Title="Fout"/>

            <!-- Success Message -->
            <InfoBar
                x:Name="SuccessInfoBar"
                IsOpen="False"
                Severity="Success"
                Title="Succes"/>

            <!-- Name -->
            <TextBox
                x:Name="NameTextBox"
                Header="Naam"
                PlaceholderText="Jouw naam"/>

            <!-- Email -->
            <TextBox
                x:Name="EmailTextBox"
                Header="E-mailadres"
                PlaceholderText="voorbeeld@email.nl"/>

            <!-- Password -->
            <PasswordBox
                x:Name="PasswordBox"
                Header="Wachtwoord"
                PlaceholderText="Minimaal 6 tekens"/>

            <!-- Confirm Password -->
            <PasswordBox
                x:Name="ConfirmPasswordBox"
                Header="Wachtwoord bevestigen"
                PlaceholderText="Herhaal wachtwoord"/>

            <!-- Role Selection -->
            <StackPanel Spacing="8" Margin="0,10,0,0">
                <TextBlock Text="Wat wil je doen?" FontWeight="SemiBold"/>
                <RadioButton
                    x:Name="PlayerRadioButton"
                    Content="âš½ Ik wil voetballen (Speler)"
                    IsChecked="True"
                    GroupName="RoleGroup"/>
                <RadioButton
                    x:Name="GamblerRadioButton"
                    Content="ðŸŽ° Ik wil wedden op wedstrijden (Gokker)"
                    GroupName="RoleGroup"/>
                <TextBlock
                    Text="Als gokker krijg je 100 credits om mee te beginnen!"
                    FontSize="12"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Margin="28,0,0,0"/>
            </StackPanel>

            <!-- Register Button -->
            <Button
                x:Name="RegisterButton"
                Content="Registreren"
                HorizontalAlignment="Stretch"
                Style="{StaticResource AccentButtonStyle}"
                Click="RegisterButton_Click"
                Margin="0,10,0,0"/>

            <!-- Loading -->
            <ProgressRing
                x:Name="LoadingRing"
                IsActive="False"
                HorizontalAlignment="Center"/>

            <!-- Info -->
            <TextBlock
                Text="Na registratie kun je inloggen op de website voor alle functies."
                TextWrapping="Wrap"
                HorizontalAlignment="Center"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                FontSize="12"
                Margin="0,10,0,0"/>

            <!-- Login Link -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <TextBlock Text="Heb je al een account? " VerticalAlignment="Center"/>
                <HyperlinkButton
                    Content="Log hier in"
                    Click="LoginLink_Click"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Page>
