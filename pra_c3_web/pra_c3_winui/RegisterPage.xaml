<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="pra_c3_winui.RegisterPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="40">
        <StackPanel
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Width="400"
            Spacing="16">

            <!-- Logo / Titel -->
            <TextBlock
                Text="⚽ Schoolvoetbal Gokken"
                FontSize="32"
                FontWeight="Bold"
                HorizontalAlignment="Center"
                Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>

            <TextBlock
                Text="Account Aanmaken"
                FontSize="24"
                HorizontalAlignment="Center"/>

            <TextBlock
                Text="Registreer als gokker en ontvang €100 startkapitaal!"
                TextWrapping="Wrap"
                HorizontalAlignment="Center"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                FontSize="12"
                Margin="0,0,0,10"/>

            <!-- Error Message -->
            <InfoBar
                x:Name="ErrorInfoBar"
                IsOpen="False"
                Severity="Error"
                Title="Fout"/>

            <!-- Success Message -->
            <InfoBar
                x:Name="SuccessInfoBar"
                IsOpen="False"
                Severity="Success"
                Title="Succes"/>

            <!-- Username -->
            <TextBox
                x:Name="UsernameTextBox"
                Header="Gebruikersnaam"
                PlaceholderText="Kies een gebruikersnaam"/>

            <!-- Password -->
            <PasswordBox
                x:Name="PasswordBox"
                Header="Wachtwoord"
                PlaceholderText="Kies een wachtwoord"/>

            <!-- Confirm Password -->
            <PasswordBox
                x:Name="ConfirmPasswordBox"
                Header="Wachtwoord bevestigen"
                PlaceholderText="Herhaal wachtwoord"/>

            <!-- Register Button -->
            <Button
                x:Name="RegisterButton"
                Content="Registreren"
                HorizontalAlignment="Stretch"
                Style="{StaticResource AccentButtonStyle}"
                Click="RegisterButton_Click"/>

            <!-- Login Link -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <TextBlock Text="Heb je al een account? " VerticalAlignment="Center"/>
                <HyperlinkButton
                    Content="Log hier in"
                    Click="LoginLink_Click"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Page>
